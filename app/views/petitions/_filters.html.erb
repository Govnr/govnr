<%= form_for_filterrific @filterrific do |f| %>
  <span>
    <i class="fa fa-search fa-fw"></i> <small><strong>Filter</strong></small>
    <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
    <%= f.text_field(
      :search_query,
      class: 'filterrific-periodically-observed filter-input'
    ) %>
  </span>
  <span>
    <small><strong>Tag</strong></small>
    <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
    <%= f.text_field(
      :tagged_with,
      class: 'filterrific-periodically-observed filter-input'
    ) %>
  </span>
  <span>
  <small><strong>Created after</strong></small>
    
    <%= f.text_field(:with_created_at_gte, class: 'filter-input-dt', id: 'datetimepicker1') %>
    <script type="text/javascript">
            $(function () {
                $('#datetimepicker1').datetimepicker();
            });
        </script>
  </span>
  <span>
  <small><strong>Sort by</strong></small>
    <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by],{ :class => 'filter-input' }) %>
  </span>
  <span>
    <%= link_to(
      'Reset filters',
      reset_filterrific_url,
    ) %>
  </span>
  <%# add an automated spinner to your form when the list is refreshed %>
  <%= render_filterrific_spinner %>
<% end %>