<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :address %>
    <%= f.input :postcode %>
    <%= f.input :encrypted_password %>
    <%= f.input :salt %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
