<div class="row">
  <div class="col-lg-12">
   <div class="panel panel-default panel-toolbar">
    <div class="panel-heading">
    <span class="bar-title"><i class="fa fa-bullhorn fa-fw"></i> <%= @petition.name %></span>
	<div class="pull-right icon-space">
	<i class="fa fa-user fa-fw"></i>
	 <small> <strong>Created by:</strong> <%= link_to User.find(@petition.creator_id).name, group_user_path(id: @petition.creator_id) %></small>
	 <br >
	 <i class="fa fa-tags fa-fw"></i>
	 <small> <strong>Tags:</strong> <%= @petition.tag_list %></small>
	 <br />
	 <%= render partial:'petitions/countdown', locals:{ petition: @petition, reload_on_finish: true}  %>
	</div>
	<div class="clearfix"></div>
    </div>
   </div>
  </div>
</div>