<% if ( comment.reported == 1 && current_user.has_role?(:moderator)) %>
<div class="comment comment-reported list-group-item">
<div class="text-muted">Comment reported as <%= comment.report_reason %> by User#<%= comment.reporter_id %> 
<% if comment.report_comment.present? %>
because "<%= comment.report_comment %>" 
<% end %>
<div class="btn-group pull-right clearfix">
            <button type="button" class="btn btn-danger btn-xs dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-chevron-down"></i>
            </button>
            <ul class="dropdown-menu slidedown">
                <li>
                    <a href="#">
                        <i class="fa fa-check-circle fa-fw"></i> Hide Comment
                    </a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="#">
                        <i class="fa fa-times fa-fw"></i> Cancel Report
                    </a>
                </li>
            </ul>
        </div>
</div>
</div>
<% end %>
<div class="comment list-group-item">
    <%= render partial:'/comments/comment_body', commentable: @commentable, locals: {comment: comment } %>
</div>
<% else %>