<div class="row">
<div class="col-md-12">
<div class="panel panel-default">
    <%= render partial: 'groups/activity/activity_filters_form' %>
<div class="panel-heading">

	<div id="quick_stats">
	<%= render partial: 'groups/activity/activity_filters_bar' %>
	</div>
</div>


</div>
    <div id="activity_feed">
    <%= render partial: 'groups/activity/activity_feed' %>
    </div>


</div>
</div>
<script>
$(document).ready(function() {
  if ($('.pagination').length) {
    $(window).scroll(function() {
      var url = $('.next').find('a').attr('href');
      if (url && $(window).scrollTop() > $(document).height() - $(window).height() - 50) {
        $('.pagination').html('<div class="loader-spin"></div>');
        return $.getScript(url);
      }
    });
    return $(window).scroll();
  }
});
</script>