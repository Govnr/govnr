<!-- modal -->
  <div class="modal fade" id="motion-poll-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel">Support this Petition</h4>
        </div>
        <div class="modal-body">
        <% if current_user.voted_as_when_voted_for @motion %>
          <p>You've already supported this petition, and you can't support it again or retract your support.</p>
        <% end %>
        <p>Do you think this motion should be passed into legislation?</p>
          <%= render :partial => "poll", petition: @motion  %>
        </div>
      </div>
    </div>
  </div>
  <!-- /modal -->