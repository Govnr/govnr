<% @panel_class = 'panel-danger' %>
<% @panel_icon = 'fa-comment' %>
<% @past_participle = 'deleted'  %>
<% @definite_article = 'a'  %>
<% @object = 'comment'  %>
<% @body_content = activity.trackable.content if activity.trackable %>
<% @truncate_length = 250 #(set to negative number to bypass truncation) %>
<% if params[:small] == true %>
	<%= activity_small_for activity %>
<% else %>
	<%= activity_for activity %>
<% end %>